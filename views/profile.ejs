<script>
    $(document).ready(function () {
        $('#profile_photo_upload').on('click', function() {
            var id='';
            $.ajax({
                url: '/profile_photo_email',
                type: 'POST',
                data: {'email':localStorage.getItem("email")},
                processData: false,
                contentType: false,
                complete: function (r) {
                    alert(r.responseText);
                    id=r.responseText;
                    upload_image(id);
                }
            });

        });
        function upload_image(id) {
            var files = $("#upload-input").get(0).files;

            if (files.length > 0) {
                var formData = new FormData();
                for (var i = 0; i < files.length; i++) {
                    var file = files[i];
                    formData.append('uploads[]', file, id);
                }

                $.ajax({
                    url: '/profile_upload',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    complete: function (r) {
                        alert(r.responseText);
                        if(r.responseText=='success')
                        {
                            $('#myModal').find('.close').click();
                        }
                    }
                });
            }
            else
            {
                $('#snackbar').text("Please choose Image");
                myFunction();
            }
        }
    });
    function myFunction() {
        var x = document.getElementById("snackbar")
        x.className = "show";
        setTimeout(function () {
            x.className = x.className.replace("show", "");
        }, 3000);
    }
</script>